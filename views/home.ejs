  <div class="container mt-1">
    <div class="row bg-secondary justify-content-center">
      <div class="col-8">
      <form action="/students/create" id="new-std" method="post">
        <div class="mb-1 mt-1">
          <label for="student_id" class="form-label">Student Name</label>
          <input type="text" name="stdname" class="form-control" id="student_id" aria-describedby="emailHelp" required>
         
        </div>
        <div class="mb-1">
          <label for="college_id" class="form-label">college</label>
          <input type="text" name="college" class="form-control" id="college_id" required>
        </div>
        <div class="mb-1">
          <label for="batch_id" class="form-label">Batch</label>
          <input type="text" name="batch" class="form-control" id="batch_id" required>
        </div>
        

        <select class="form-select mb-1" name="course"  id="course_id" aria-label="Default select example" required>
          <option value="">Select Course</option>
          <option value="DSA">DSA</option>
          <option value="WebDev">WebDev</option>
          <option value="React">React</option>
        </select>
        

        
        <select class="form-select mb-1" name="coursescore"  id="coursescore_id" aria-label="Default select example" required>
          <option value="">Course Score</option>
          <option value="Nill">Nill</option>
          <option value="75%">75%</option>
          <option value="85%">85%</option>
          <option value="95%">95%</option>
        </select>
        

        <select class="form-select mb-1" name="status"  id="status_id" aria-label="Default select example" required>
          <option value="">Select Status</option>
          <option value="Not Applicable">Not Applicable</option>
          <option value="Placed">Placed</option>
          <option value="Not Placed">Not Placed</option>
        </select>

        <select class="form-select mb-2" name="eligibleforinterview"  id="eligibleforinterview_id" aria-label="Default select example" required>
          <option value="">Select Eligibility for Interviews</option>
          <option value="Not Eligible">Not Eligible</option>
          <option value="Eligible">Eligible</option>
        </select>

        <div class="d-grid mb-2 col-6 mx-auto">
          
          <button type="submit" class="btn btn-primary">Add Student</button>
        </div>
  
      </form>

    </div>
  </div>
</div>


